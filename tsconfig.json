{
	"compilerOptions": {
		"useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
		"types": ["vite/client"],
    "module": "ESNext",
		"jsx": "react-jsx",
		"moduleResolution": "Bundler",
		"resolveJsonModule": true,
		"target": "ES2022",
		"strict": true,
		"allowJs": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
				"@/icon-name": ["src/components/ui/icons/name.d.ts", "./types/icon-name.d.ts"]
		}
	},
	"noEmit": true,
  "include": ["./**/*.ts", "./**/*.tsx"],
}
